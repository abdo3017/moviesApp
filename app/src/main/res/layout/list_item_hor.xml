<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tvInteraction"
            type="com.app.movie.presentation.ui.homepage.TVSeriesTopRatedAdapter.TVSeriesInteraction" />

        <variable
            name="tvSeries"
            type="com.app.movie.datasource.network.models.tv.TVSeriesTopRatedResult" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        style="@style/Widget.Card"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:onClick="@{() -> tvInteraction.onTVSeriesItemSelected(tvSeries)}"
        android:layout_margin="8dp"
        android:transitionName="shared_element_container"
        app:cardBackgroundColor="@android:color/transparent"
        app:shapeAppearance="@style/Widget.listItem.Corner">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewHome"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                tools:srcCompat="@mipmap/hustle"
                android:transitionName="imageViewHome"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:load_poster="@{tvSeries.posterPath}"
                app:shapeAppearance="@style/Widget.listItem.Corner" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title"
                style="@style/Widget.MovieTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{tvSeries.name}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Joker" />

            <ImageView
                android:id="@+id/bookmark_button"
                style="@style/Widget.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/corner_rectangle"
                android:padding="@dimen/dimen8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_bookmark" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>